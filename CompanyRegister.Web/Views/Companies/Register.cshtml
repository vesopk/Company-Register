
@{
    ViewData["Title"] = "Register";
}

<div class="signup-form" style="margin-top: 55px;">
    <form asp-controller="Companies" asp-action="Register" method="post" style="border-top: 1px #EEEEEE solid">
        <h2>Register company</h2>
        <p>Please fill in this form to register a company!</p>
        <hr>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"></span>
                <input type="text" class="form-control" name="Name" placeholder="Name" required="required">
            </div>
            <span class="text-danger">@Html.ValidationMessage("Name")</span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"></span>
                <input type="date" class="form-control" name="FoundationDate" placeholder="Foundation Date" required="required">
            </div>
            <span class="text-danger">@Html.ValidationMessage("FoundationDate")</span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"></span>
                <input type="text" class="form-control" name="PictureUrl" placeholder="Picture Url" required="required">
            </div>
            <span class="text-danger">@Html.ValidationMessage("PictureUrl")</span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg" style="padding: 15px;">Register</button>
        </div>
    </form>
</div>

