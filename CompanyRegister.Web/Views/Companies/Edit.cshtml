@model Company
@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<div class="signup-form" style="margin-top: 55px;">
    <form asp-controller="Companies" asp-route-id="@Model.Id" asp-action="Edit" method="post" style="border-top: 1px #EEEEEE solid">
        <h2>Edit @Model.Name</h2>
        <p>Please fill in this form to edit @Model.Name!</p>
        <hr>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"></span>
                <input type="text" class="form-control" placeholder="@Model.Name" disabled="disabled">
                <input type="text" class="form-control" name="Name" placeholder="Name">
            </div>
            <span class="text-danger">@Html.ValidationMessage("Name")</span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"></span>
                <input type="text" class="form-control" placeholder="@Model.FoundationDate.ToShortDateString()" disabled="disabled">
                <input type="date" class="form-control" name="FoundationDate" placeholder="Foundation Date">
            </div>
            <span class="text-danger">@Html.ValidationMessage("FoundationDate")</span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"></span>
                <input type="text" class="form-control" placeholder="@Model.PictureUrl" disabled="disabled">
                <input type="text" class="form-control" name="PictureUrl" placeholder="Picture Url">
            </div>
            <span class="text-danger">@Html.ValidationMessage("PictureUrl")</span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg" style="padding: 15px;">Save Changes</button>
        </div>
    </form>
</div>
@if (ViewData.ContainsKey("edit"))
{
    <div class="alert alert-success text-center" style="width: 50%;margin: auto">
        <strong>Success!</strong> @ViewData["edit"]
    </div>
}

